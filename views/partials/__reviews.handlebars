

	<section class="ftco-section testimony-section">
		<div class="img img-bg border" style="background-image: url(/public/images/bg_4.jpg);"></div>
		<div class="overlay"></div>
		<div class="container">
			<div class="row justify-content-center mb-5">
				<div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
					<h2 class="mb-3">نظرات مراجعین</h2>
				</div>
			</div>
			<div class="row ftco-animate">
				<div class="col-md-12">
					<div class="carousel-testimony owl-carousel ftco-owl">
{{#each reviews}}

						<div class="item">
							<div class="testimony-wrap py-4">
								<div class="icon d-flex align-items-center justify-content-center"><span
										class="fa fa-quote-left"></div>
								<div class="text">
									<p class="mb-4">{{this.Comment}}</p>
									<div class="d-flex align-items-center">
										<div class="user-img"
											style="background-image: url(/public/images/avatar.png)"></div>
										<div class="pl-3">
											<p class="name">{{this.Name}}</p>
											<span class="position">{{this.Problem}}</span>
										</div>
									</div>
								</div>
							</div>
						</div>
{{/each}}
					</div>
				</div>
			</div>
		</div>
	</section>

